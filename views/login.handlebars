<div class="container">
    <h2>Sign in</h2>
    <div class="content">
        {{#if error}}
            <p class="error">{{error}}</p>
        {{/if}}
        <form method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input class="text" id="email" name="email" type="email" required><br>
            <label for="email">E-mail</label><br>
            <input class="text" name="password" type="password" required><br>
            <label for="password">Password</label>
            <div class="button">
                <input class="button-input" type="submit" value="Sign in">
            </div>
        </form>
        <p id="please-login">You don't have an account? Please <a href="/register">register</a>.</p>
    </div>
</div>
<script type="text/javascript" src="/script/login-script.js"></script>
